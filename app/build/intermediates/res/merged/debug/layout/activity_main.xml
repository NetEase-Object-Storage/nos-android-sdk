<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp" />
    <!-- <Button -->
    <!-- android:id="@+id/cancel" -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:layout_alignParentBottom="true" -->
    <!-- android:layout_centerHorizontal="true" -->
    <!-- android:layout_marginBottom="18dp" -->
    <!-- android:text="cancel" /> -->

    <EditText
        android:id="@+id/connectET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView1"
        android:text="30"
        android:ems="10" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/connectET"
        android:layout_alignParentLeft="true"
        android:text="连接超时(s)："
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn1"
        android:layout_alignBottom="@+id/btn1"
        android:layout_alignRight="@+id/connectET"
        android:layout_marginRight="32dp"
        android:text="http" />

    <EditText
        android:id="@+id/readET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt1"
        android:layout_toRightOf="@+id/textView2"
        android:text="30"
        android:ems="10" >
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/readET"
        android:layout_alignLeft="@+id/textView1"
        android:text="读取超时(s)："
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/fileET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/readET"
        android:layout_below="@+id/txt1"
        android:layout_marginTop="38dp"
        android:layout_toRightOf="@+id/textView2"
        android:text="128"
        android:ems="10" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fileET"
        android:layout_alignLeft="@+id/textView2"
        android:text="分片大小(k)："
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/retryET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fileET"
        android:layout_alignRight="@+id/fileET"
        android:layout_below="@+id/fileET"
        android:layout_marginTop="30dp"
        android:text="2"
        android:ems="10" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/retryET"
        android:layout_toLeftOf="@+id/retryET"
        android:text="重试次数："
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/refreshET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/retryET"
        android:layout_below="@+id/retryET"
        android:layout_marginTop="29dp"
        android:layout_toRightOf="@+id/btn1"
        android:text="7200"
        android:ems="10" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/refreshET"
        android:layout_toLeftOf="@+id/refreshET"
        android:text="LBS刷新时间(s)："
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/refreshET"
        android:layout_marginTop="23dp"
        android:layout_toLeftOf="@+id/txt"
        android:text="https" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignParentBottom="true"
        android:text="nhttp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignLeft="@+id/btn"
        android:text="nhttps" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button1"
        android:text="cancel" />

</RelativeLayout>